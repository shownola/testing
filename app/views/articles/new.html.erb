<h3 class="text-center">Adding New Article</h3>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@article, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>

      <% if @article.errors.any? %>
      <div class="ml-4 mr-4 card card-danger col-md-offset-1">
        <div class="card-header">
          <h2 class="card-title">
            <%= pluralize(@article.errors.count, 'error') %>
            prohibited this article from being saved
          </h2>
          <div class="card-body">
            <ul>
              <% @article.errors.full_messages.each do |msg| %>
              <li>
                <%= msg %>
              </li>
          <% end %>
        </ul>
          </div>
        </div>
      </div>

    <% end %>

      <div class="form-group">
        <div class="control-label col-md-1">
          <%= f.label :title %>
        </div>
        <div class="col-md-11">
          <%= f.text_field :title, class: 'form-control', placeholder: 'Title of article', autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-1">
          <%= f.label :body %>
        </div>
        <div class="col-md-11">
          <%= f.text_field :body, class: 'form-control', placeholder: 'Body of article' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-1 col-md-11">
          <%= f.submit class: 'btn btn-primary btn-lg pull-right' %>
        </div>
      </div>

    <% end %>
  </div>
</div>
